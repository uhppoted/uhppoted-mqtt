{
  "set_time": {
    "command": "set-time",
    "request": {
      "topic": "device/time:set",
      "fields": [
        {
          "field": "device-id",
          "value": "<controller-id>",
          "description": "(required) controller serial number"
        },
        {
          "field": "date-time",
          "value": "<datetime>",
          "description": "(required) date and time to set (YYYY-mm-dd HH:mm:ss)"
        }
      ]
    },
    "response": {
      "fields": [
        {
          "field": "device-id",
          "value": "<controller-id>",
          "description": "controller serial number"
        },
        {
          "field": "date-time",
          "value": "<datetime>",
          "description": "controller system date and time (YYYY-mm-dd HH:mm:ss)"
        }
      ]
    }
  }
}
